print"Enter the value of a:"
a=gets.to_i
print"Enter the value of b:"
b=gets.to_i
print"Enter the value of c:"
c=gets.to_i
if a>b && a>c
    puts "a is greatest integer: #{a}"
elsif  b>a && b>c
    puts "b is greatest integer: #{b}"
else 
    puts "c is greatest integer: #{c}"
end

