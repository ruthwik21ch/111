=begin
puts "Hello,Rutwik"
print"enter the string:"
str=gets.chomp
print"Enter non negative integer"
n=gets.to_i
n.times do
    puts str
end


$pi=3.14
print"enter the radius:"
r=gets.to_i
area= $pi*(r**2)
perimeter=2*$pi*r
puts "area: #{area}"
puts "perimeter: #{perimeter}"


print"enter your Firstname:"
firstname=gets.chomp
print"enter your lastname:"
lastname=gets.chomp
fullname=firstname+" "+lastname
puts fullname.reverse


print"Enter the side length:"
s=gets.to_i
areas=s*s
peris=4*s
puts "area of square: #{areas}"
puts "perimeter of square: #{peris}"

print"Enter the length of Rectangle:"
l=gets.to_i
print"enter the breadth of rectangle:"
b=gets.to_i
arear=l*b
perir=2*(l+b)
puts "area of Rectangle: #{arear}"
puts "perimeter of Rectangle: #{perir}"

=end
print"Enter Your Firstname:"
firstname=gets.chomp
print"Enter Your Lastname:"
lastname=gets.chomp
print"Enter Your place of birth:"
pob=gets.chomp
print"Enter State:"
state=gets.chomp
